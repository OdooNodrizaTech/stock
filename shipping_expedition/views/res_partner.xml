<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_shipping_expedition_res_partner_info_form" model="ir.ui.view">
            <field name="name">res.partner.shipping.expedition.info.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="action" name="%(base_delivery_carrier_expedition.shipping_expedition_action)d" icon="fa-truck" attrs="{'invisible': [('customer', '=', False)]}" context="{'search_default_partner_id': active_id}">
                        <field string="Expediciones" name="shipping_expedition_count" widget="statinfo"/>
                    </button>                                         
                </div>
            </field>
        </record>
    </data>
</openerp>