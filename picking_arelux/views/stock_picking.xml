<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.view.picking_arelux</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="priority" position="after">
                <field name="out_refund_invoice_id" readonly="1" groups="base.group_no_one"/>
            </field>
            <xpath expr="//notebook/page/field[@name='pack_operation_product_ids']/tree/field[@name='product_id']" position="after">
                <field name="name" attrs="{'readonly': True}"/>
            </xpath>
        </field>
    </record>
    <record id="view_picking_withcarrier_out_form_picking_arelux" model="ir.ui.view">
        <field name="name">view_picking_withcarrier_out_form_picking_arelux</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <field name="carrier_id" position="replace">	    	
                <field name="carrier_id" attrs="{'readonly': [('shipping_expedition_id', '!=', False)]}" />
	       </field>                                   
        </field>
    </record>    
</odoo>
