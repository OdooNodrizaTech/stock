<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_arelux_tree" model="ir.ui.view">
        <field name="name">Add stock picking extra fields</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">	    	
                <field name="supplier_ref"/>
	       </field>
           <field name="partner_id" position="before">	    	
                <field name="partner_state_id"/>
	       </field>
           <field name="min_date" position="after">	    	
                <field name="management_date" invisible="1"/>
                <field name="confirmation_date_order" invisible="1"/>                
                <field name="user_id_done" invisible="1" />                
	       </field>                        
        </field>
    </record>
    <record id="stock_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.view.picking_arelux</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="partner_id" position="before">
                <field name="supplier_ref" />
            </field>
            <field name="partner_id" position="before">	    	
                <field name="partner_state_id" attrs="{'readonly': True}"/>
	       </field>
           <field name="origin" position="after">	    	
                <field name="total_cashondelivery"/>
	       </field>
           <field name="number_of_packages" position="after">	    	
                <field name="number_of_pallets"/>
	       </field>
           <field name="min_date" position="after">	    	
                <field name="management_date" attrs="{'readonly': True}" />
                <field name="confirmation_date_order" attrs="{'readonly': True}" />                
                <field name="user_id_done" attrs="{'readonly': [('state','in',('cancel','done'))]}" domain="[('id','in', (42,59,63))]" />                
	       </field>
            <field name="pack_operation_product_ids" position="after">
                <field name="sale_order_note" placeholder="Añadir una nota interna que se imprimirá en el vale de entrega" readonly="1" style="width:100%;float:none;margin-bottom: 20px;" />
                <field name="shipping_expedition_note" placeholder="Añadir una nota para la expedicion (transportista)" readonly="1" style="width:100%;float:none;margin-bottom: 20px;" />
            </field>
            <xpath expr="//notebook/page/field[@name='pack_operation_product_ids']/tree/field[@name='product_id']" position="after">                
                <field name="name" attrs="{'readonly': True}"/>                
            </xpath>                        
        </field>
    </record>
    <record id="view_picking_withcarrier_out_form_picking_arelux" model="ir.ui.view">
        <field name="name">view_picking_withcarrier_out_form_picking_arelux</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <field name="carrier_id" position="replace">	    	
                <field name="carrier_id" attrs="{'readonly': [('shipping_expedition_id', '!=', False)]}" />
	       </field>                                   
        </field>
    </record>    
</odoo>
