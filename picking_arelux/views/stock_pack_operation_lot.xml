<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="picking_arelux_view_pack_operation_lot_form" model="ir.ui.view">
        <field name="name">picking_arelux_view_stock_production_lot_tree</field>
        <field name="model">stock.pack.operation</field>
        <field name="inherit_id" ref="stock.view_pack_operation_lot_form"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="qty_to_lot_id_domain" readonly="1" />
            </field>
            <xpath expr="//field[@name='pack_lot_ids']//tree//field[@name='lot_id']" position="replace">
                <field name="lot_id" domain="[('product_id','=', parent.product_id),('product_qty_store', '>=', parent.qty_to_lot_id_domain)]" />
            </xpath>                                                                                                        
        </field>
    </record>           
</odoo>
