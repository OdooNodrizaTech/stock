<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_shipping_expedition_txt_form" model="ir.ui.view">
        <field name="model">shipping.expedition</field>
        <field name="inherit_id" ref="base_delivery_carrier_expedition.shipping_expedition_form_view"/>
        <field name="arch" type="xml">
            <field name="exps_rels" position="after">   
                <field name="txt_url" widget="url" attrs="{'invisible': [('carrier_type','!=', 'txt')]}"/>
            </field>
        </field>
    </record>
    <record id="view_shipping_expedition_search_delivery_carrier_expedition_txt" model="ir.ui.view">
        <field name="name">view_shipping_expedition_search_delivery_carrier_expedition_txt</field>
        <field name="model">shipping.expedition</field>
        <field name="inherit_id" ref="base_delivery_carrier_expedition.view_shipping_expedition_search" />
        <field name="priority" eval="23"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_shipping_expeditions_filter']" position="after">
                <separator/>                
                <filter string="TXT" name="txt_filter" domain="[('carrier_id.carrier_type','=','txt')]"/>                                
            </xpath>                                                                                                                
        </field>
    </record>   
</odoo>