<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="shipping_expedition_cbl_view_shipping_expedition_search" model="ir.ui.view">
        <field name="name">shipping_expedition_cbl_view_shipping_expedition_search</field>
        <field name="model">shipping.expedition</field>
        <field name="inherit_id" ref="shipping_expedition.view_shipping_expedition_search" />
        <field name="priority" eval="21"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_shipping_expeditions_filter']" position="after">                
                <filter string="CBL" name="cbl_filter" domain="[('carrier_id.carrier_type','=','cbl')]"/>                
                <separator/>                
            </xpath>                                                                                                                
        </field>
    </record>   
</odoo>